#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--)
	{
	    int N,A;
	    cin >> N >> A;
	    int chef_chocolates = A;
        int chefina_chocolates = N - A;
        int diff = abs(chefina_chocolates - chef_chocolates);
        cout << diff <<endl;
	}
	return 0;
}
